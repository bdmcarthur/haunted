<h1 class="title-text text-center">PROFILE</h1>

<h1 class="text-white text-center">My Places</h1>
<div class="row my-3">
<div class="row">
        {{#each places}}
         <div class="col-sm-4 my-4">
            <div class="card h-100 my-3">
                <div class="card-body">
                    <a href='/placeDetail/{{this._id}}'><img class="card-img-top mb-3" src="{{this.image}}" alt=""></a>
                    <h5 class="card-title font-weight-bold">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div class='text-center'>
                        <button class="myButton btn m-2 px-4"><a href='/edit/{{this._id}}'>Edit Place</a></button>
                        <button class="myButton btn m-2"><a href='/delete/{{this._id}}'>Delete Place</a></button>
                    </div>
                </div>
            </div>
          </div>
        {{/each}}
  </div>
<div class='col-12 my-3'>
<button class="btn btn-primary my-3 text-white d-block mx-auto py-2" ><a class="profile-btn" href='/add'>Add New Place</a></button>
</div>

<h1 class="text-white text-center mx-auto d-block">My Favorites</h1>
<div class="row my-3">
        {{#each favorites}}
            <div class="col-sm-4 my-4">
            <div class="card h-100 my-3">
            <div class="card-body">
            <a href='/placeDetail/{{this._id}}'><img class="card-img-top mb-3" src="{{this.image}}" alt=""></a>
            <h5 class="card-title font-weight-bold">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            </div>
            </div>
            </div>
        {{/each}}
  </div>



    